<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/vertical_margin">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/minute_picker_hour_label"
            style="@style/ParkeerAssistent.MinutePickerDialog.Label"
            android:text="@string/minute_picker_hour"/>

        <NumberPicker
            android:id="@+id/minute_picker_hour"
            style="@style/ParkeerAssistent.MinutePickerDialog.NumberPicker" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/minute_picker_minute_label"
            style="@style/ParkeerAssistent.MinutePickerDialog.Label"
            android:text="@string/minute_picker_minute"/>

        <NumberPicker
            android:id="@+id/minute_picker_minute"
            style="@style/ParkeerAssistent.MinutePickerDialog.NumberPicker" />

    </LinearLayout>


</LinearLayout>